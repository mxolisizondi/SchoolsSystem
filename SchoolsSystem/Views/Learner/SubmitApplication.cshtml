@model SchoolsSystem.Models.Application
@{
    ViewBag.Title = "SubmitApplication";
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-6">
        <div class="card">
            @using (Html.BeginForm("SubmitApplication", "Learner", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal m-t-20", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Learner.UseId)
                @Html.HiddenFor(m => m.School.Id)
            <div class="card-body">
                <h4 class="card-title">Application Form</h4>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.Name, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.Name, new { @class = "form-control", @placeholder = "Full Names Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.Surname, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.Surname, new { @class = "form-control", @placeholder = "Last Name Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.IdNumber, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.IdNumber, new { @class = "form-control", @placeholder = "SA ID/Passport Number Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.DateOfBirth, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", @placeholder = "Date of Birth Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.Age, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.Age, new { @class = "form-control", @placeholder = "Age in years Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.EmailAddress, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.EmailAddress, new { @class = "form-control", @placeholder = "Email address Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.Learner.CellNumber, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Learner.CellNumber, new { @class = "form-control", @placeholder = "Contact number Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.PreviousSchool, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.PreviousSchool, new { @class = "form-control", @placeholder = "Previous School Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.PreviousGrade, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.PreviousGrade, new { @class = "form-control", @placeholder = "Previous Grade Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ApplyingGrade, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ApplyingGrade, new { @class = "form-control", @placeholder = "Applying Grade Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.Name, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ParentDetail.Name, new { @class = "form-control", @placeholder = "Parent/Guardian Full Names Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.Surname, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ParentDetail.Surname, new { @class = "form-control", @placeholder = "Parent/Guardian Last Name Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.IdNumber, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ParentDetail.IdNumber, new { @class = "form-control", @placeholder = "Parent/Guardian SA ID/ Passport Number Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.EmailAddress, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ParentDetail.EmailAddress, new { @class = "form-control", @placeholder = "Parent/Guardian Email Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.CellNumber, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ParentDetail.CellNumber, new { @class = "form-control", @placeholder = "Parent/Guardian Cell No. Here" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(m => m.ParentDetail.HomeAddress, new { @class = "col-sm-3 text-right control-label col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(m => m.ParentDetail.HomeAddress, new { @class = "form-control", @placeholder = "Home Address Here" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3">File Upload</label>
                    <div class="col-md-9">
                        <div class="custom-file">
                            <input type="file" name="file" multiple="multiple" required>
                        </div>
                    </div>
                </div>
            </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


