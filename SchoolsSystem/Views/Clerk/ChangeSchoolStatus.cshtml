@model SchoolsSystem.ViewModels.SchoolViewModel
@{
    ViewBag.Title = "ChangeSchoolStatus";
    Layout = "~/Views/Shared/_ClerkLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-6">
        <div class="card">
            @using (Html.BeginForm("ChangeSchoolStatus", "Clerk", FormMethod.Post, new { @class = "form-horizontal m-t-20", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.School.Id)
                <div class="card-body">
                    <h6 class="card-title">Change Form Status</h6>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.School.OpenDate, new { @class = "col-sm-3 text-right control-label col-form-label" })
                        <div class="col-sm-9 input-group">
                            @Html.TextBoxFor(m => m.School.OpenDate, "{0: d MMM yyyy}", new { @class = "form-control", id = "datepicker-autoclose", @placeholder = "mm/dd/yyyy" })
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.School.ClosingDate, new { @class = "col-sm-3 text-right control-label col-form-label" })
                        <div class="col-sm-9 input-group">
                            @Html.TextBoxFor(m => m.School.ClosingDate, "{0: d MMM yyyy}", new { @class = "form-control", id = "datepicker-autoclose1", @placeholder = "mm/dd/yyyy" })
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.School.AcceptApplicationId, new { @class = "col-sm-3 text-right control-label col-form-label" })
                        <div class="col-sm-9 input-group">
                            @Html.DropDownListFor(m => m.School.AcceptApplicationId, new SelectList(Model.AcceptApplications, "Id", "Status"), "Select application status", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="border-top">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary">Change Status</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        jQuery('#datepicker-autoclose').datepicker({
            autoclose: true,
            todayHighlight: true
        });
        jQuery('#datepicker-autoclose1').datepicker({
            autoclose: true,
            todayHighlight: true
        });
    </script>
}
